{
  "manifest_version": 3,
  "name": "Youtube Music Party",
  "description": "Youtube Music Party",
  "version": "1.0.0",
  "action": {
    "default_icon": "icon-128.png",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "js/serviceWorker.js"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "js/contentScript.js"
      ],
      "matches": [ "https://*/*" ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://music.youtube.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [ "js/inject.js" ],
      "matches": [ "https://*/*" ]
    }
  ]
}
